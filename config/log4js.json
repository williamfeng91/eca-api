  "appenders": [
    {
      "type": "clustered",
      "appenders": [
        {
          "type": "dateFile",
          "filename": "logs/access.log",
          "pattern": ".yyyy-MM-dd",
          "category": "http"
        },
        {
          "type": "file",
          "filename": "logs/eca.log",
          "maxLogSize": 10485760,
          "numBackups": 3
        }
      ]
    }
  ]
}